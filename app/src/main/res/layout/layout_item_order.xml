<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_no"
            android:text="1"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            android:layout_width="10dp"
            android:layout_height="wrap_content" />
        <View
            android:background="@android:color/darker_gray"
            android:layout_marginRight="10dp"
            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/txt_name_order_product"
            android:text="ELECKAR cao cap duoi sieu muot collagen strong 1000ml"
            android:maxLines="3"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_width="190dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edt_number_order_product"
            android:layout_gravity="center"
            android:text="1"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_order_product_price"
            android:layout_gravity="center"
            android:text=""
            android:maxLines="1"
            android:gravity="center"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btn_delete_order_product"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_delete" />
    </LinearLayout>
</LinearLayout>